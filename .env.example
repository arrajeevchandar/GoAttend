# Attendance Engine - Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=development
# APP_ENV=production

# =============================================================================
# HTTP SERVER
# =============================================================================
HTTP_PORT=8081
GRPC_PORT=9090

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# For local development with Docker:
DATABASE_URL=postgres://attendance:attendance@localhost:5433/attendance?sslmode=disable
DB_PASSWORD=attendance
DB_PORT=5433

# For production, use strong password and enable SSL:
# DATABASE_URL=postgres://attendance:STRONG_PASSWORD@postgres:5432/attendance?sslmode=require

# =============================================================================
# REDIS
# =============================================================================
REDIS_ADDR=localhost:6379
REDIS_PORT=6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# IMPORTANT: Change these in production!
JWT_ISSUER=attendance-engine
JWT_SIGNING_KEY=dev-signing-secret-change-this-in-production

# Token expiration times
ACCESS_TTL=15m
REFRESH_TTL=24h

# =============================================================================
# FACE RECOGNITION SERVICE
# =============================================================================
FACE_SERVICE_URL=http://localhost:8000

# Set to 'true' to skip face verification (development only)
FACE_SKIP=true
# Set to 'false' in production with real face service

# =============================================================================
# QUEUE
# =============================================================================
# Options: 'redis' (recommended) or 'memory' (single instance only)
QUEUE_BACKEND=redis

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MIN=120

