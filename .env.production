# Attendance Engine - Production Environment
# Copy to .env for production deployment

APP_ENV=production

# HTTP
HTTP_PORT=8081

# Database - USE STRONG PASSWORD!
DATABASE_URL=postgres://attendance:YOUR_STRONG_DB_PASSWORD@postgres:5432/attendance?sslmode=disable
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD

# Redis
REDIS_ADDR=redis:6379

# JWT - GENERATE SECURE KEY!
# Use: openssl rand -base64 32
JWT_SIGNING_KEY=YOUR_SECURE_JWT_KEY_HERE
JWT_ISSUER=attendance-engine

# Token TTL
ACCESS_TTL=15m
REFRESH_TTL=24h

# Face Service
FACE_SERVICE_URL=http://face-svc:8000
FACE_SKIP=false

# Queue
QUEUE_BACKEND=redis

# Rate Limiting
RATE_LIMIT_PER_MIN=60
